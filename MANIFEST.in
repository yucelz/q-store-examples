# Include documentation
include README.md
include LICENSE
recursive-include docs *.md

# Include configuration files
include .env.example
include requirements.txt
include requirements-minimal.txt
include environment.yml
include pyproject.toml
include Makefile

# Include scripts
recursive-include scripts *.sh *.py

# Include source package
recursive-include src *.py

# Include tests
recursive-include tests *.py

# Exclude compiled files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.so
global-exclude .DS_Store

# Exclude environment and generated files
exclude .env
exclude react_train.jsonl
global-exclude *.log
prune tinyllama-react-quantum
prune models
prune checkpoints
prune data/*
!prune data/.gitkeep
